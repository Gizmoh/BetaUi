#:kivy 1.7.2

<CBoton>:
	size_hint: None,None
	size:"90dp","90dp"
	text_size: 85, None
	multiline: True
	
<row>:
	canvas:
		Color:
			rgb: 1,1,1
		Rectangle:
			size: self.size
			pos: self.pos
	orientation: "horizontal"
	nombre: label
	codigo: label2
	cantidad: label3
	close: Close
	add: add
	size_hint: 1,None
	height: "50dp"
	Button:
		id: add
		size_hint: None,1
		Image:
			source: 'add.png'
			y: self.parent.y-25
			x: self.parent.x
			allow_stretch: False
	Label:
		id: label
		shorten: True
		color: 0,0,0,1
		text_size: 125, None
		multiline: True
		text: "TEXT"
	Label:
		id: label2
		text: "1337"
		color: 0,0,0,1
	Label:
		id: label3
		text: "1"
		color: 0,0,0,1

	Button:
		id: Close
		size_hint: None,1
		Image:
			source: 'delete.png'
			y: self.parent.y-25
			x: self.parent.x
			allow_stretch: False

<Interfaz>:
	btn: btn
	caja: caja
	txt: txt
	grilla: grilla
	orientation: "vertical"
	spacing: "4dp"
	BoxLayout:
		orientation: "horizontal"
		size_hint: 1, .15
		Label:
			text: "cliente"
		TextInput:
			id: txt
			text: "Derp"
		Label:
			text: "Dependiente"
		TextInput:
			text: "HueHue"
		Label:
			text: "Fecha"
		TextInput:
			text: "14,14,14"
	BoxLayout:
		size_hint: 1,1.6
		canvas:
			Color:
				rgb: .75,.75,.75
			Rectangle:
				pos:self.pos
				size:self.size
		BoxLayout:
			ScrollView:
				do_scroll_x: False
				GridLayout:
					orientation: "vertical"
					spacing: "5dp"
					cols: 1
					id: caja
					size_hint_y: None
		Button:
			id: btn
			size_hint:.25,1
			text: "Test02"
	BoxLayout:
		AbstractView:
			ScrollView:
				scroll_distance: "15dp"
				do_scroll_y: False
				GridLayout:
					id: grilla
					rows: 2
					size_hint_x: None
					orientation: "horizontal"
					spacing: "20dp"